<%- include("partials/newHeader.ejs") %>

<div data-content-region="header_bottom"></div>
<div class="body" data-currency-code="EUR">

    <div class="home-content">
        <div class="tt-breadcrumbs-main">
            <div class="tt-breadcrumbs">
                <div class="container">
                    <h1 class="category-name">
                        <span class="breadcrumb-title ">
                        </span>
                        <span class="breadcrumb-title is-active">
                            <span class="breadcrumb-label">Your Orders</span>
                        </span>
                    </h1>
                    <ul class="breadcrumbs" itemscope itemtype="">
                        <li class="breadcrumb " itemprop="itemListElement" itemscope>
                            <a href="/" class="breadcrumb-label" itemprop="item"><span itemprop="name">Home</span></a>
                            <meta itemprop="position" content="1" />
                        </li>
                        <li class="breadcrumb is-active" itemprop="itemListElement" itemscope>
                            <meta itemprop=" item" content="/cart.php">
                            <span class="breadcrumb-label" itemprop="name">Your Orders</span>
                            <meta itemprop="position" content="2" />
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div style="margin-left: 13%; margin-right: 13%;">
            <div class="uk-child-width-1-1@m" uk-grid>
                <div class="uk-overflow-auto">
                    <table class="uk-table uk-table-hover uk-table-middle uk-table-divider">
                        <thead>
                            <style>
                                th.uk-table-small {
                                    text-align: center;
                                    color: #2a3746;
                                    font-weight: bold;
                                }

                                .default-btn {
                                    font-weight: light;
                                    font-size: medium;
                                    background-color: #ffaa3d;
                                    border-radius: 50px;
                                    padding: 7px 14px 7px 14px;
                                    color: white;
                                }
                            </style>
                            <tr>
                                <th class="uk-table-small">Order-ID</th>
                                <th class="uk-table-small">Items Ordered</th>
                                <th class="uk-table-small">Date of Purchase</th>
                                <th class="uk-table-small">Status</th>
                                <th class="uk-table-small">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% var sum = 0 %>

                            <% order.forEach(order => { %>
                            <tr>
                                <td class="uk-table-link">
                                    <a class="uk-link-reset"
                                        href="/user-order/<%=order.orderId%>"><%=order.orderId%></a>
                                </td>
                                <td class="uk-table-link">
                                    <a class="uk-link-reset"
                                        href="/user-order/<%=order.orderId%>"><%=order.orderedItems.length%></a>
                                </td>
                                <td class="uk-table-link">
                                    <a class="uk-link-reset"
                                        href="/user-order/<%=order.orderId%>"><%=order.purchaseTime.toDateString() %></a>
                                </td>
                                <td class="uk-table-link">
                                    <a class="uk-link-reset"
                                        href="/user-order/<%=order.orderId%>"><%=order.status.toUpperCase() %></a>
                                </td>
                                <td class="uk-text-nowrap">â‚¹ <%=order.total%>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>

                    <div>
                        <a href="/cancellations"><button class="default-btn">My Cancellations</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/newFooter.ejs") %>
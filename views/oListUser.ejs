<%- include('partials/header', {title: "Welcome to 112Cart", desc: "Best Shopping Website"}); -%>

<!-- Start Page Title Area -->
<div class="page-title-area item-bg-2">
    <div class="container">
        <div class="page-title-content">
            <h2>Your Orders</h2>
            <ul>
                <li>
                    <a href="index.html">
                        Home
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </li>
                <li>Your Orders</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title Area -->

<!-- Start Cart Area -->
<section class="cart-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <form>
                    <div class="cart-table table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Order ID</th>
                                    <th scope="col">Total Items Ordered</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% order.forEach(el => { %>
                                <tr>
                                    <td class="product-name">
                                        <a href="#"><%=el.orderId%></a>
                                    </td>

                                    <td class="product-name">
                                        <a href="#"><%=el.orderedItems.length%></a>
                                    </td>

                                    <td class="product-name">
                                        <a href="#"><%=el.purchaseTime.toDateString() %></a>
                                    </td>

                                    <td class="product-price">
                                        <span class="unit-amount"><%=el.status.toUpperCase()%></span>
                                    </td>

                                    <td class="product-subtotal">
                                        <span class="subtotal-amount">Rs. <%=el.total%></span>

                                        <a href="#" class="remove">
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <div class="cart-buttons">
                        <div class="row align-items-center">
                            <div class="col-lg-7 col-sm-7 col-md-7">
                                <div class="continue-shopping-box">
                                    <a href="#" class="default-btn">
                                        Continue Shopping
                                        <i class="flaticon-right-arrow-forward"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="col-lg-5 col-sm-5 col-md-5 text-right">
                                <a href="#" class=" default-btn">
                                    Update Cart
                                    <i class="flaticon-right-arrow-forward"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="cart-totals">
                        <h3>Cart Totals</h3>

                        <ul>
                            <li>Subtotal <span>$150.00</span></li>
                            <li>Shipping <span>$30.00</span></li>
                            <li>Total <span><b>$180.00</b></span></li>
                        </ul>
                        <a href="#" class="default-btn">
                            Proceed to Checkout
                            <i class="flaticon-right-arrow-forward"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End Cart Area -->

<%- include('partials/footer') -%>
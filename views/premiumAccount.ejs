
<%- include('partials/adminHeader'); -%>

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active"></li>
        </ol>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-file"></i>Add Credit</h2>
            </div>

            <div class="container">
                <br>
                <h1>Add Credit for Postpaid Account</h1>
                <br>
                <br>
                <form action="/users/premium-account/<%=uuid%>" method="POST">
                    <div class="ui form">

                        <div class="field">
                            <label>Credit Percent</label>
                            <input type="number" placeholder="Credit Percent" name="credPerc" min="1" max="100" value="<%=user.credPerc%>">
                        </div>

                        <div class="field">
                            <label>No of Days</label>
                            <input type="number" placeholder="Credit Percent" name="days" min="0" value="<%=user.daysToRemind%>">
                        </div>

                        <div class="field">
                            <label>Maximum Credit Balance</label>
                            <input type="text" placeholder="Maximum Credit Balance" name="credBalance" value="<%=user.credBalance%>">
                        </div>
                    </div>
                    <button class="ui button" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/adminFooter'); -%>
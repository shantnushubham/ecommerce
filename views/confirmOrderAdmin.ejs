<%- include('partials/adminHeader'); -%>

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Confirm Order</li>
        </ol>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-file"></i>Authorize Order</h2>
            </div>

            <div class="container">
                <br>
                <h1>Authorize Order</h1>
                <br>
                <br>
                <h2>Leaving any of the fields empty before submission will accept/authorize the order but shiprocket request will not be sent.</h2>
                <form action="/admin/confirm-order/<%=orderId%>" method="POST">
                    <div class="ui form">
                        <div class="field">
                            <label>Length (minimum value is 5)</label>
                            <input type="text" placeholder="length" name="length">
                        </div>
                        <div class="field">
                            <label>Breadth (minimum value is 5)</label>
                            <input type="text" placeholder="Breadth" name="breadth">
                        </div>
                        <div class="field">
                            <label>Height (minimum value is 5)</label>
                            <input type="text" placeholder="Height" name="height">
                        </div>
                        <div class="field">
                            <label>Weight (minimum value is 5)</label>
                            <input type="text" placeholder="Weight" name="weight">
                        </div>
                        <div class="field">
                            <label>vendor ID for order pickup</label>
                            <input type="text" placeholder="vendor Id" name="vendorId">
                        </div>
                    </div>
                    <button class="ui button" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/adminFooter'); -%>
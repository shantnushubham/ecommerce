
<%- include('partials/header', {title: "Welcome to 112Cart", desc: "Best Shopping Website"}); -%>

<!-- Start Page Title Area -->
<div class="page-title-area item-bg-4">
    <div class="container">
        <div class="page-title-content">
            <h2>Get Quote</h2>
            <ul>
                <li>
                    <a href="index.html">
                        Home
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </li>
                <li>Get Quote</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title Area -->

<!-- Start Book Table Area -->
<section class="book-table-area book-table-b ptb-100">
    <div class="container">
        <div class="book-from bookss-froms">
            <h3>Get Quote</h3>
            <form method="POST" action="/service/<%=item.iid%>">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <div class="text-wrap">
                                <input class="form-control" id="exampleFormControlTextarea1" name="mail"
                                    placeholder="Email " <% if (currentUser != "") { %> value="<%=currentUser.email%>"
                                    <% } %> rows="3"></input>
                                <div class="text-icon">
                                    <i class="flaticon-contract"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <div class="text-wrap">
                                <input class="form-control" id="exampleFormControlTextarea1" name="phone"
                                    placeholder="Phone Number " <% if (currentUser != "") { %>
                                    value="<%=currentUser.phone%>" <% } %> rows="3"></input>
                                <div class="text-icon">
                                    <i class="flaticon-contract"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <div class="text-wrap">
                                <input class="form-control" id="exampleFormControlTextarea1" name="name"
                                    placeholder="Name " rows="3" <% if (currentUser != "") { %>
                                    value="<%=currentUser.name%>" <% } %>></input>
                                <div class="text-icon">
                                    <i class="flaticon-contract"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <div class="text-wrap">
                                <input class="form-control" id="exampleFormControlTextarea1" type="number" min="1"
                                    placeholder="Enter Units (<%=item.measurementUnit%>)" rows="3"></input>
                                <div class="text-icon">
                                    <i class="flaticon-contract"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="default-btn">
                        GET QUOTE
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- End  Book Table Area -->

<%- include('partials/footer'); -%>
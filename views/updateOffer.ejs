<%- include('partials/adminHeader'); -%>

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Update Offer</li>
        </ol>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-file"></i>Update Offer</h2>
            </div>

            <div class="container">
                <br>
                <h1>Update Offer</h1>
                <br>
                <br>
                <form action="/admin/offers/update/<%=offer.code%> " method="POST">
                    <div class="ui form">
                        <div class="field">
                            <label>Code</label>
                            <input type="text" placeholder="Code" name="code" value="<%=offer.code%>" readonly>
                        </div>
                        <div class="inline fields">
                            <label>Is this a percent value?</label>
                            <div class="field">
                                <div class="ui radio checkbox">
                                    <input type="radio" name="percent" value=true <% if (offer.isPercent) { %>
                                        checked="" <% } %> readonly>
                                    <label>Yes</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui radio checkbox">
                                    <input type="radio" name="percent" value=false <% if (!offer.isPercent) { %>
                                        checked="" <% } %> readonly>
                                    <label>No</label>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <label>Discount</label>
                            <input type="number" placeholder="Discount" value="<%=offer.discount%>" name="discount"
                                required>
                        </div>
                        <div class="inline fields">
                            <label>Is this for a business?</label>
                            <div class="field">
                                <div class="ui radio checkbox">
                                    <input type="radio" name="business" value=true <% if (offer.forBusiness) { %>
                                        checked="" <% } %> value=true required>
                                    <label>Yes</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui radio checkbox">
                                    <input type="radio" name="business" value=false <% if (!offer.forBusiness) { %>
                                        checked="" <% } %>>
                                    <label>No</label>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <label>Exclusive ItemsIds (For multiple exclusive item IDs, separate links using "||", if
                                left empty, the offer is applicable to all items)</label>
                            <% let itemIds = ""%>
                            <% for (let x = 0; x < offer.items.length - 1; x++) { %>
                                <% itemIds = itemIds + offer.items[x] + "||" %>
                            <% } %>
                            <% if (offer.items.length > 0) { %>
                                <% itemIds = itemIds + offer.items[offer.items.length - 1] %>
                            <% } %>
                            <input type="text" placeholder="Items" name="items" value="<%=itemIds%>">
                        </div>
                    </div>
                    <button class="ui button" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/adminFooter'); -%></div>
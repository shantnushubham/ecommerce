<%- include('partials/adminHeader'); -%>

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Update Convenience Fee</li>
        </ol>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-file"></i>Update Convenience Fee</h2>
            </div>

            <div class="container">
                <br>
                <h1>Update Convenience Fee</h1>
                <br>
                <br>
                <form action="/fee/update" method="POST">
                    <div class="ui form">
                        <div class="inline fields">
                            <label for="fruit">Is this Active?</label>
                            <div class="field">
                                <input type="radio" name="active" value=true <% if (fee.active) {%> checked="" <% } %>
                                    tabindex="0" class="hidden" required>
                                <label>Yes</label>

                            </div>
                            <div class="field">
                                <input type="radio" name="active" value=false <% if (!fee.active) {%> checked="" <% } %>
                                    tabindex="0" class="hidden">
                                <label>No</label>
                            </div>
                        </div>
                        <div class="field">
                            <label>Charge</label>
                            <input type="number" placeholder="Charge" name="charge" value="<%=fee.charge%>" required>
                        </div>
                    </div>
                    <button class="ui button" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/adminFooter'); -%>
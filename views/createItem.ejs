<%- include('partials/adminHeader'); -%>

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Add Item</li>
        </ol>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-file"></i>Add Item</h2>
            </div>

            <div class="container">
                <br>
                <h1>Add Item</h1>
                <br>
                <br>
                <form action="/admin/createItem" method="POST">
                    <div class="ui form">
                        <div class="field">
                            <label>Name</label>
                            <input type="text" placeholder="Name" name="name">
                        </div>
                        <div class="field">
                            <label>Price</label>
                            <input type="text" placeholder="Price" name="price">
                        </div>
                        <div class="field">
                            <label>Weight</label>
                            <input type="text" placeholder="Weight" name="weight">
                        </div>
                        <div class="field">
                            <label>Color</label>
                            <input type="text" placeholder="Color" name="color">
                        </div>
                        <div class="field">
                            <label>Category</label>
                            <input type="text" placeholder="Category" name="category">
                        </div>
                        <div class="field">
                            <label>Sub-Category</label>
                            <input type="text" placeholder="Sub-Category" name="subCategory">
                        </div>
                        <div class="field">
                            <label>Tag</label>
                            <input type="text" placeholder="Tag" name="tag">
                        </div>
                        <div class="field">
                            <label>Grouping-Tag</label>
                            <input type="text" placeholder="Grouping-Tag" name="groupingTag">
                        </div>
                        <div class="field">
                            <label>Vendor Id</label>
                            <input type="text" placeholder="Vendor Id" name="vendorId">
                        </div>
                        <div class="field">
                            <label>Image Link (For multiple images, separate links using "||")</label>
                            <input type="text" placeholder="ImageLink" name="image">
                        </div>
                        <div class="field">
                            <label>Short Description</label>
                            <input type="text" placeholder="Short Description" name="shortDesc">
                        </div>
                        <div class="field">
                            <label>Content</label>
                            <p>For a bold text, enclose the text to bold with <code>&lt;b&gt;</code>
                                Example: <code>&lt;b&gt; This is a bold text &lt;/b&gt;</code><br>
                                For an italic text, enclose the text to italicize with <code>&lt;i&gt;</code>
                                Example: <code>&lt;i&gt; This is an italic text &lt;/i&gt;</code><br>
                                For an underlined text, enclose the text to underline with <code>&lt;u&gt;</code>
                                Example: <code>&lt;u&gt; This is an underlined text &lt;/u&gt;</code><br>
                                For inserting a line break, use <code>&lt;br&gt;</code>
                                Example: Line 1 <code>&lt;br&gt;</code> Line 2<br>
                                For using a list, enclose the list items with <code>&lt;li&gt;</code>
                                Example: <code>&lt;li&gt;</code> Item 1 <code>&lt;/li&gt;</code><code>&lt;li&gt;</code>
                                Item 2 <code>&lt;/li&gt;</code><code>&lt;li&gt;</code> Item 3 <code>&lt;/li&gt;</code>
                            </p>
                            <textarea spellcheck="true" placeholder="Content" name="content"></textarea>
                        </div>
                    </div>
                    <button class="ui button" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/adminFooter'); -%>
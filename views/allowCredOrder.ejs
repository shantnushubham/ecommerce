
<%- include('partials/adminHeader'); -%>

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active"></li>
        </ol>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-file"></i>Set Credit</h2>
            </div>

            <div class="container">
                <br>
                <h1>Set Credit</h1>
                <br>
                <br>
                <form action="/allow-credit/<%=orderId%>" method="POST">
                    <div class="ui form">

                        <div class="field">
                            <label>Credit Percent</label>
                            <input type="number" placeholder="Credit Percent" name="credPerc" min="1" max="100">
                        </div>

                        <div class="field">
                            <label>No of Days</label>
                            <input type="number" placeholder="Credit Percent" name="days" min="0">
                        </div>

                    </div>
                    <button class="ui button" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/adminFooter'); -%>
<%- include('partials/header', {title: "Welcome to 112Cart", desc: "Best Shopping Website"}); -%>

<!-- Start Page Title Area -->
<div class="page-title-area item-bg-2">
	<div class="container">
		<div class="page-title-content">
			<h2>Cart</h2>
			<ul>
				<li>
					<a href="index.html">
						Home
						<i class="fa fa-chevron-right"></i>
					</a>
				</li>
				<li>Cart</li>
			</ul>
		</div>
	</div>
</div>
<!-- End Page Title Area -->

<!-- Start Cart Area -->
<section class="cart-area ptb-100">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12">
				<form method="POST" action="/updateCart">
					<div class="cart-table table-responsive">
						<table class="table table-bordered">
							<thead>
								<tr>
									<th scope="col">Product</th>
									<th scope="col">Name</th>
									<th scope="col">Unit Price</th>
									<th scope="col">Quantity</th>
									<th scope="col">Total</th>
								</tr>
							</thead>

							<tbody>
								<% let sum = 0; %>
								<% for (let i = 0; i < cartlisting.length; i++) { %>
								<tr>
									<td class="product-thumbnail">
										<a href="#">
											<img src="<%=cartlisting[i].item.image[0]%>" alt="item">
										</a>
									</td>

									<td class="product-name">
										<a href="#"><%= cartlisting[i].item.name %></a>
									</td>
									<% sum = sum + parseInt(cartlisting[i].item.price) * parseInt(cartlisting[i].quantity) %>

									<td class="product-price">
										<span class="unit-amount">Rs. <%= cartlisting[i].item.price %></span>
									</td>

									<td class="product-quantity">
										<div class="input-counter">
											<span class="minus-btn">
												<i class="fa fa-minus"></i>
											</span>
											<input class="quantity" type="text" min="0"
												value="<%= cartlisting[i].quantity %>"
												name="<%= cartlisting[i].item.iid %>" id="number">
											<span class="plus-btn">
												<i class="fa fa-plus"></i>
											</span>
										</div>
									</td>

									<td class="product-subtotal">
										<span class="subtotal-amount">Rs.
											<%= parseInt(cartlisting[i].item.price) * parseInt(cartlisting[i].quantity) %></span>

										<a href="#" class="remove">
											<i class="fa fa-trash-o"></i>
										</a>
									</td>
								</tr>
								<% } %>
							</tbody>
						</table>
					</div>

					<div class="cart-buttons">
						<div class="row align-items-center">
							<div class="col-lg-7 col-sm-7 col-md-7">
								<div class="continue-shopping-box">
									<a href="/items" class="default-btn">
										Continue Shopping
										<i class="flaticon-right-arrow-forward"></i>
									</a>
								</div>
							</div>

							<div class="col-lg-5 col-sm-5 col-md-5 text-right">
								<button class=" default-btn" type="submit">
									Submit
									<i class="flaticon-right-arrow-forward"></i>
								</button>
							</div>
						</div>
					</div>

					<div class="cart-totals">
						<h3>Cart Totals</h3>

						<ul>
							<li>Subtotal <span>Rs. <%= sum %></span></li>
							<li>GST <span>Rs. <%= Math.ceil((0.18) * sum) %></span></li>
							<li>Total <span><b>Rs. <%= Math.ceil((1.18) * sum) %></b></span></li>
						</ul>
						<a href="#" class="default-btn">
							Proceed to Checkout
							<i class="flaticon-right-arrow-forward"></i>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
<!-- End Cart Area -->

<%- include('partials/footer') %>
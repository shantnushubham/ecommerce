<%- include('partials/header', {title: "Welcome to 112Cart", desc: "Best Shopping Website"}); -%>

<!-- Start Page Title Area -->
<div class="page-title-area item-bg-2">
    <div class="container">
        <div class="page-title-content">
            <h2>Your Saved Orders</h2>
            <ul>
                <li>
                    <a href="index.html">
                        Home
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </li>
                <li>Your Saved Orders</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title Area -->

<!-- Start Cart Area -->
<section class="cart-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="cart-table table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Order ID</th>
                                <th scope="col">Total Items Ordered</th>
                                <th scope="col">Date</th>
                                <th scope="col">Status</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% allOrders.forEach(el => { %>
                            <tr>
                                <td class="product-name">
                                    <a href="/saved-orders/<%=el.orderId%>"><%=el.orderId%></a>
                                </td>

                                <td class="product-name">
                                    <a href="/saved-orders/<%=el.orderId%>"><%=el.orderedItems.length%></a>
                                </td>

                                <td class="product-name">
                                    <a href="/saved-orders/<%=el.orderId%>"><%=el.purchaseTime.toDateString() %></a>
                                </td>

                                <td class="product-name">
                                    <a href="/saved-orders/<%=el.orderId%>"><%=el.status.toUpperCase()%></a>
                                </td>

                                <td class="product-name">
                                    <a href="/saved-orders/<%=el.orderId%>">Rs. <%=el.total%></a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <div class="cart-buttons">
                    <div class="row align-items-center">
                        <div class="col-lg-4 col-sm-4 col-md-4">
                            <div class="continue-shopping-box">
                                <a href="/items" class="default-btn">
                                    Continue Shopping
                                    <i class="flaticon-right-arrow-forward"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-4 col-md-4">
                            <div style="text-align: center;">
                                <a href="/cancellations" class=" default-btn">
                                    My Cancellations
                                    <i class="flaticon-right-arrow-forward"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-4 col-md-4 text-right">
                            <a href="/updateCart" class=" default-btn">
                                Update Cart
                                <i class="flaticon-right-arrow-forward"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Cart Area -->

<%- include('partials/footer') -%>
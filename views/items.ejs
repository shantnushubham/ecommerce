<%- include("partials/newHeader") %>

<div data-content-region="header_bottom"></div>
<div class="body" data-currency-code="INR">

	<% function changeCase(string) { var newString = string.replace("_", " "); return newString; } %>

	<div class="home-content">

		<div class="tt-breadcrumbs-main">
			<div class="tt-breadcrumbs">
				<div class="container">
					<h1 class="category-name">
						<span class="breadcrumb-title ">
						</span>
						<span class="breadcrumb-title is-active">
							<span class="breadcrumb-label">All Items</span>
						</span>
					</h1>
					<ul class="breadcrumbs" itemscope itemtype="http://schema.org/BreadcrumbList">
						<li class="breadcrumb " itemprop="itemListElement" itemscope
							itemtype="http://schema.org/ListItem">
							<a href="/" class="breadcrumb-label" itemprop="item"><span itemprop="name">Home</span></a>
							<meta itemprop="position" content="1" />
						</li>
						<li class="breadcrumb is-active" itemprop="itemListElement" itemscope
							itemtype="http://schema.org/ListItem">
							<meta itemprop="item" content="/laptop/">
							<span class="breadcrumb-label" itemprop="name">All Items</span>
							<meta itemprop="position" content="2" />
						</li>
					</ul>
				</div>
			</div>
		</div>

		<div class="page container">
			<div class="row">
				<aside class="page-sidebar" id="faceted-search-container">
					<nav>
						<div id="facetedSearch" class="facetedSearch">
							<div class="facetedSearch-refineFilters">
								<h5 class="sidebarBlock-heading">
									Filters
								</h5>

							</div>

							<a href="#facetedSearch-navList" role="button" class="facetedSearch-toggle toggleLink"
								data-collapsible>
								<span class="facetedSearch-toggle-text">
									Browse by Categories, Sub-Categories &amp; more

								</span>

								<span class="facetedSearch-toggle-indicator">
									<span class="toggleLink-text toggleLink-text--on">
										Hide Filters

										<i class="icon" aria-hidden="true">
											<svg>
												<use xlink:href="#icon-keyboard-arrow-up" /></svg>
										</i>
									</span>

									<span class="toggleLink-text toggleLink-text--off">
										Show Filters

										<i class="icon" aria-hidden="true">
											<svg>
												<use xlink:href="#icon-keyboard-arrow-down" /></svg>
										</i>
									</span>
								</span>
							</a>

							<div id="facetedSearch-navList" class="facetedSearch-navList blocker-container">
								<form method="POST" action="/items">
									<div class="accordion accordion--navList">

										<% if (!(category.length == 1 && category[0] == '')) { %>
										<div class="accordion-block">
											<div class="accordion-navigation toggleLink  is-open " role="button"
												data-collapsible="#facetedSearch-content--brand">
												<h5 class="accordion-title">
													Category
												</h5>

												<div class="accordion-navigation-actions">
													<svg
														class="icon accordion-indicator toggleLink-text toggleLink-text--off">
														<use xlink:href="#icon-add" />
													</svg>
													<svg
														class="icon accordion-indicator toggleLink-text toggleLink-text--on">
														<use xlink:href="#icon-remove" />
													</svg>
												</div>
											</div>
											<% category.forEach(element => { %>
											<div id="facetedSearch-content--brand" class="accordion-content  is-open ">
												<ul id="facetedSearch-navList--brand" data-facet="brand" class="navList"
													data-has-more-results="false">
													<li class="navList-item">
														<input type="checkbox" name="category"
															value="<%=element%>">&nbsp;
														<%=changeCase(element).toUpperCase()%>
														<span class="navList-action-close" aria-hidden="true">
															<svg class="icon">
																<use xlink:href="#icon-close" />
															</svg>
														</span>
													</li>
												</ul>
											</div>
											<% }) %>
										</div>
										<% } %>

										<% if (!(subCategory.length == 1 && subCategory[0] == '')) { %>
										<div class="accordion-block">
											<div class="accordion-navigation toggleLink  is-open " role="button"
												data-collapsible="#facetedSearch-content--Color">
												<h5 class="accordion-title">
													Sub-Categories
												</h5>

												<div class="accordion-navigation-actions">
													<svg
														class="icon accordion-indicator toggleLink-text toggleLink-text--off">
														<use xlink:href="#icon-add" />
													</svg>
													<svg
														class="icon accordion-indicator toggleLink-text toggleLink-text--on">
														<use xlink:href="#icon-remove" />
													</svg>
												</div>
											</div>

											<div id="facetedSearch-content--Color" class="accordion-content  is-open ">
												<ul id="facetedSearch-navList--Color" data-facet="Color" class="navList"
													data-has-more-results="false">
													<% subCategory.forEach(element => { %>
													<li class="navList-item">
														<input type="checkbox" name="subCategory"
															value="<%=element%>">&nbsp;
														<%=changeCase(element).toUpperCase()%>

														<span class="navList-action-close" aria-hidden="true">
															<svg class="icon">
																<use xlink:href="#icon-close" />
															</svg>
														</span>
														</a>
													</li>
													<% }) %>
												</ul>

											</div>
										</div>
										<% } %>

										<% if (!(tag.length == 1 && tag[0] == '')) { %>
										<div class="accordion-block">
											<div class="accordion-navigation toggleLink  is-open " role="button"
												data-collapsible="#facetedSearch-content--Color">
												<h5 class="accordion-title">
													Tags
												</h5>

												<div class="accordion-navigation-actions">
													<svg
														class="icon accordion-indicator toggleLink-text toggleLink-text--off">
														<use xlink:href="#icon-add" />
													</svg>
													<svg
														class="icon accordion-indicator toggleLink-text toggleLink-text--on">
														<use xlink:href="#icon-remove" />
													</svg>
												</div>
											</div>

											<div id="facetedSearch-content--Color" class="accordion-content  is-open ">
												<ul id="facetedSearch-navList--Color" data-facet="Color" class="navList"
													data-has-more-results="false">
													<% tag.forEach(element => { %>
													<li class="navList-item">
														<input type="checkbox" name="tag"
															value="<%=element%>">&nbsp;
														<%=changeCase(element).toUpperCase()%>
														<span class="navList-action-close" aria-hidden="true">
															<svg class="icon">
																<use xlink:href="#icon-close" />
															</svg>
														</span>
														</a>
													</li>
													<% }) %>
												</ul>

											</div>
										</div>
										<% } %>
									</div>
									<div style="text-align: center;">
										<button class="button button--small card-figcaption-button" type="submit">
											<span class="material-icons">add</span>
											Submit
										</button>
									</div>
								</form>
							</div>
						</div>
					</nav>
				</aside>

				<main class="page-content" id="product-listing-container">
					<style>
						@media (min-width: 600px) {
							#forPhone {
								display: none;
							}
						}
						@media (max-width: 600px) {
							.productGrid .product {
								display: none
							}
						}
					</style>

					<ul class="productGrid">
						<% itemlist.forEach(el => { %>
						<% if (el.active) { %>
						<li class="product">
							<article class="card ">
								<figure class="card-figure">
									<div class="sale-flag-side"> </div>
									<a href="/items/<%= el.iid %>">
										<div class="card-img-container">
											<img src="<%=el.image[0]%>" alt="<%=el.name%>" title="<%=el.name%>"
												data-sizes="auto" class="lazyload card-image" />
										</div>
									</a>
									<figcaption class="card-figcaption">
										<div class="card-figcaption-body">
											<a href="/wishlist.php?action=add&amp;product_id=111"
												class="button button--small card-figcaption-button tt-wishlist"><span
													class="material-icons">favorite_border</span></a>
											<label class="button button--small card-figcaption-button tt-compare"
												title="Compare" data-product-compare for="compare-111">
												<span class="material-icons">sync</span>
												<input type="checkbox" class="tt-comparecheck" name="products[]"
													value="111" id="compare-111" data-compare-id="111">
											</label>
											<a class="button button--small card-figcaption-button quickview"
												title="Quick view" data-product-id="111">
												<span class="material-icons">remove_red_eye</span>
											</a>
										</div>
									</figcaption>
								</figure>

								<div class="card-body">
									<h4 class="card-title">
										<a href="/items/<%= el.iid %>"><%=el.name%></a>
									</h4>
									<div class="card-text tt-price" data-test-info-type="price">

										<div class="price-section price-section--withTax rrp-price--withTax"
											style="display: none;">
											MSRP:
											<span data-product-rrp-with-tax class="price price--rrp">
											</span>
										</div>

										<div class="price-section price-section--withTax">
											<span class="price-label" style="display: none;">

											</span>
											<span class="price-now-label">
											</span>
											<span data-product-price-with-tax
												class="price price--withTax">â‚¹<%=el.price%></span>
										</div>
										<div class="price-section price-section--withTax non-sale-price--withTax">
											<span data-product-non-sale-price-with-tax class="price price--non-sale">
												â‚¹<%=(1.20) * el.price%>
											</span>
										</div>
									</div>

									<div class="tt-cart-btn">
										<a href="/items/<%= el.iid %>" data-event-type="product-click"
											title="Add to Cart" class="button button--small card-figcaption-button">
											<span class="material-icons">add</span>
											Buy Now
										</a>
									</div>
								</div>
							</article>
						</li>
						<% } %>
						<% }) %>
					</ul>
					<div data-content-region="category_below_content"></div>
				</main>
				<div class="uk-child-width-1-2 uk-text-center" uk-grid="masonry: true" id="forPhone">
					<% itemlist.forEach(el => { %>
					<div>
						<!-- <div class="uk-card uk-card-default uk-card-body">
							<div> -->
						<div class="uk-card uk-card-default">
							<div class="uk-card-media-top">
								<a href="/items/<%= el.iid %>">
									<img src="<%=el.image[0]%>" alt="<%=el.name%>" title="<%=el.name%>"
										data-sizes="auto" />
								</a>
							</div>
							<div class="uk-card-body" style="padding: 0;">
								<div class="card-body">
									<h4 class="card-title">
										<a href="/items/<%= el.iid %>"><%=el.name%></a>
									</h4>
									<div class="card-text tt-price" data-test-info-type="price">
										<div class="price-section price-section--withTax rrp-price--withTax"
											style="display: none;">
											MRP:
											<span data-product-rrp-with-tax class="price price--rrp">
											</span>
										</div>

										<div class="price-section price-section--withTax">
											<span class="price-label" style="display: none;">

											</span>
											<span class="price-now-label">
											</span>
											<span data-product-price-with-tax
												class="price price--withTax">â‚¹<%=el.price%></span>
										</div>
										<div class="price-section price-section--withTax non-sale-price--withTax">
											<span data-product-non-sale-price-with-tax class="price price--non-sale">
												â‚¹<%=(1.20) * el.price%>
											</span>
										</div>
										<a href="/items/<%= el.iid %>" data-event-type="product-click"
											title="Add to Cart" class="button button--small card-figcaption-button">
											<span class="material-icons">add</span>
											Buy Now
										</a>
									</div>
								</div>
							</div>
						</div>

					</div>

					<% }) %>
				</div>

			</div>
		</div>


	</div>
	<div id="modal" class="modal" data-reveal data-prevent-quick-search-close>
		<a href="#" class="modal-close" aria-label="Close" role="button">
			<span aria-hidden="true">&#215;</span>
		</a>
		<div class="modal-content"></div>
		<div class="loadingOverlay"></div>
	</div>
	<div id="alert-modal" class="modal modal--alert modal--small" data-reveal data-prevent-quick-search-close>
		<div class="swal2-icon swal2-error swal2-icon-show"><span class="swal2-x-mark"><span
					class="swal2-x-mark-line-left"></span><span class="swal2-x-mark-line-right"></span></span></div>

		<div class="modal-content"></div>

		<div class="button-container"><button type="button" class="confirm button" data-reveal-close>OK</button>
		</div>
	</div>
</div>

<%- include("partials/newFooter.ejs") %>
<%- include('partials/adminHeader'); -%>

<div class="container">
    <br>
    <!-- <a href="/admin/createItem"><button class="ui large green button">Create Item</button></a> -->
    <br>
    <br>
    <div class="ui items">
        <div class="item">
            <div class="image">
                <!-- <img src="<%=item.image%>"> -->
            </div>
            <div class="content">
                <h2>Name: <%=item.name%></h2>
                <a class="header"><%=item.color%></a>
                <a class="header"><%=item.content%></a>
                <a class="header"><%=item.active%></a>
                <div class="meta">
                    <h4>Price: Rs. <%=item.price%></h4>
                    <h4>Color: <%=item.color%></h4>
                    <% if (item.active == true) { %>
                        <h4 style="color: green !important;">Active</h4>
                    <% } else { %>
                        <h4 style="color: red !important;">Inactive</h4>
                    <% } %>
                </div>
                <div class="description">
                    <h4>Content: </h4><br>
                    <h6><%= item.content %></h6>
                </div>
                <!-- <div class="extra">
                    Additional Details
                </div> -->
            </div>
        </div>
    </div>
</div>


<%- include('partials/adminFooter'); -%>
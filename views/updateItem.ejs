<%- include('partials/adminHeader'); -%>

<div class="container">
    <br>
    <h1>Update Item</h1>
    <br>
    <br>
    <form action="/admin/update-item/<%=iid%>" method="POST">
        <div class="ui form">
            <div class="field">
                <label>Name</label>
                <input type="text" placeholder="Name" name="name" value="<%=item.name%>">
            </div>
            <div class="field">
                <label>Price</label>
                <input type="text" placeholder="Price" name="price" value="<%=item.price%>">
            </div>
            <div class="field">
                <label>Weight</label>
                <input type="text" placeholder="Weight" name="weight" value="<%=item.weight%>">
            </div>
            <div class="field">
                <label>Color</label>
                <input type="text" placeholder="Color" name="color" value="<%=item.color%>">
            </div>
            <div class="field">
                <label>Category</label>
                <input type="text" placeholder="Category" name="category" value="<%=item.category%>">
            </div>
            <div class="field">
                <label>Sub-Category</label>
                <input type="text" placeholder="Sub-Category" name="subCategory" value="<%=item.subCategory%>">
            </div>
            <div class="field">
                <label>Tag</label>
                <input type="text" placeholder="Tag" name="tag" value="<%=item.tag%>">
            </div>
            <div class="field">
                <label>Grouping-Tag</label>
                <input type="text" placeholder="Grouping-Tag" name="groupingTag" value="<%=item.groupingTag%>">
            </div>
            <div class="field">
                <label>Vendor Id</label>
                <input type="text" placeholder="vendor Id" name="vendorId" value="<%=item.vendorId%>">
            </div>

            <div class="field">
                <label>Image Link</label>
                <% var image = ""; for (var x = 0; x < item.image.length - 1; x++) { image = image + item.image[x] + "||" } image = image + item.image[item.image.length - 1] %>
                <input type="text" placeholder="ImageLink" name="image" value="<%=image%>">
            </div>
            <div class="field">
                <label>Content</label>

                <textarea rows="2" spellcheck="true" placeholder="content" name="content"><%=item.content%></textarea>
            </div>
        </div>
        <button class="ui button" type="submit">Submit</button>
    </form>
</div>

<%- include('partials/adminFooter'); -%>
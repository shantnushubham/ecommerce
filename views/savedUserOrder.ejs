<%- include('partials/header', {title: "Welcome to 112Cart", desc: "Best Shopping Website"}); -%>

<!-- Start Page Title Area -->
<div class="page-title-area item-bg-2">
    <div class="container">
        <div class="page-title-content">
            <h2>Your Saved Order</h2>
            <ul>
                <li>
                    <a href="/">
                        Home
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </li>
                <li>Your Saved Order</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title Area -->

<!-- Start Cart Area -->
<section class="cart-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <form>
                    <div class="cart-table table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Item</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Payment Status</th>
                                    <th scope="col">Shipment Status</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% Olist.forEach(el => { %>
                                <tr>
                                    <td class="product-name">
                                        <%=el.item.name%>
                                    </td>

                                    <td class="product-name">
                                        <%=el.quantity%>
                                    </td>

                                    <td class="product-name">
                                        <%=order.status.toUpperCase() %>
                                    </td>

                                    <td class="product-price">
                                        <%=order.shipmentStatus.toUpperCase()%></span>
                                    </td>

                                    <td class="product-subtotal">
                                        <%var total =  parseInt(el.quantity * el.item.price) * 1.18%>
                                        Rs. <%=total%>
                                    </td>
                                </tr>
                                <% })%>
                            </tbody>
                        </table>
                    </div>

                    <div class="cart-buttons">
                        <div class="row align-items-center">
                            <div class="col-lg-4 col-sm-4 col-md-4">
                                <div class="continue-shopping-box">
                                    <a href="/pay/save/online/<%=order.orderId%>" class="default-btn">
                                        Online Payment
                                        <i class="flaticon-right-arrow-forward"></i>
                                    </a>
                                </div>
                            </div>
                            <% if (order.codAllowed) { %>
                            <div class="col-lg-4 col-sm-4 col-md-4">
                                <div class="continue-shopping-box">
                                    <a href="/pay/save/cod/<%=order.orderId%>" class="default-btn">
                                        Cash on Delivery
                                        <i class="flaticon-right-arrow-forward"></i>
                                    </a>
                                </div>
                            </div>
                            <% } %>
                            <% if (order.creditAllowed) { %>
                            <div class="col-lg-4 col-sm-4 col-md-4 text-right">
                                <a href="/pay/save/cred/<%=order.orderId%>" class=" default-btn"
                                    style="background-color: red;">
                                    Credit Payment
                                    <i class="flaticon-right-arrow-forward"></i>
                                </a>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End Cart Area -->

<%- include('partials/footer') -%>